{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "name": "NestJS: Debug",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/nest",
            "args": [
                "start",
                "--watch",
                "--debug",
            ],
            "cwd": "${workspaceFolder}",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "dev",
            }
        }
    ]
}
